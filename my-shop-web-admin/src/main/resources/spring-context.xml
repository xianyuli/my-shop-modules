        <tx:attributes>
            <tx:method name="save*" propagation="REQUIRED"/>
        </tx:attributes>
    </tx:advice>
    &lt;!&ndash;配置顾问和切入点&ndash;&gt;
    <aop:config>
        <aop:pointcut id="myPointcut" expression="execution(* com.xianyuli.my.shop.web.admin.service.*.*(..))"/>
        <aop:advisor advice-ref="myAdvice" pointcut-ref="myPointcut"/>
    </aop:config>-->
</beans>